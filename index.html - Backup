<script>
        let currentLang = 'de';

        // Funktion zum Umschalten der Sprache (DE / RU)
        function switchLang(lang) {
            currentLang = lang;
            
            // Verstecke alle Inhalte
            document.getElementById('lang-de').classList.remove('active-view');
            document.getElementById('lang-ru').classList.remove('active-view');
            
            // Zeige gew√§hlte Sprache
            document.getElementById('lang-' + lang).classList.add('active-view');
            
            // √Ñndere Navigationstexte
            document.getElementById('label-rules').innerText = (lang === 'de') ? "Regeln" : "–ü—Ä–∞–≤–∏–ª–∞";
            document.getElementById('label-table').innerText = (lang === 'de') ? "Tabelle" : "–¢–∞–±–ª–∏—Ü–∞";
        }

        // Funktion zum Umschalten der Seiten (Regeln / Tabelle)
        function showSection(section) {
            // Alle Seiten verstecken
            document.getElementById('page-rules').classList.remove('active-view');
            document.getElementById('page-table').classList.remove('active-view');
            
            // Navi-Buttons resetten
            document.getElementById('nav-rules').classList.remove('active-nav');
            document.getElementById('nav-table').classList.remove('active-nav');
            
            // Gew√§hlte Seite & Button aktivieren
            document.getElementById('page-' + section).classList.add('active-view');
            document.getElementById('nav-' + section).classList.add('active-nav');
        }
    </script>

